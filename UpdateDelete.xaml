<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.UpdateDelete"
             Title="Видалення | Оновлення">
    <VerticalStackLayout  Padding="50, 50, 50, 50">
        <Button Text="Назад" FontSize="22" BorderWidth="1" Clicked="Back" />
        <Picker x:Name="reasonPicker" Title = "Виберіть причину">
        </Picker>
        <Label x:Name="patient" Text = "Пацієнт: "/>
        <Entry x:Name="Description"  Placeholder = "Введіть опис" FontSize="22" />
        <Entry x:Name="Tooth"  Placeholder = "Введіть номер зуба" FontSize="22" />
        <DatePicker x:Name="datePicker" Format="d" />
        <TimePicker x:Name="timePicker" />
        <Picker x:Name="dentistPicker" Title = "Виберіть лікаря">
        </Picker>
        <Picker x:Name="cabinetPicker" Title = "Виберіть кабінет">
        </Picker>
        <Button Text="Видалити" FontSize="22" BorderWidth="1" Clicked="Delete" />
        <Button Text="Оновити" FontSize="22" BorderWidth="1" Clicked="Update" />
    </VerticalStackLayout>
</ContentPage>