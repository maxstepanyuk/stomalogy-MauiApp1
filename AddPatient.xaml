<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AddPatient"
             Title="Додавання нового пацієнта">
    <VerticalStackLayout Padding="50, 50, 50, 50">
        <Button Text="Назад" FontSize="22" BorderWidth="1" Clicked="Back" />
        <Entry x:Name = "NameP" Placeholder = "Введіть Ім'я" FontSize="22" MaxLength ="20" />
        <Entry x:Name = "Phone" Placeholder = "Введіть Номер Телефону" FontSize="22" />
        <Button Text = "Додати" FontSize="22" BorderWidth="1" Clicked="Add" />
    </VerticalStackLayout>
</ContentPage>